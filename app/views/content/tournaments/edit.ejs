<div class="container">
    <h1>Edit Tournament</h1>
    <form action="/tournament-edit/<%= tournament._id %>" method="POST">
        <div class="form-group">
            <label for="name">Name:</label>
            <input type="text" name="name" id="name" value="<%= tournament.name %>" required>
        </div>
        <div class="form-group">
            <label for="game">Game:</label>
            <input type="text" name="game" id="game" value="<%= tournament.game %>" required>
        </div>
        <div class="form-group">
            <label for="organizer">Organizer:</label>
            <input type="text" name="organizer" id="organizer" value="<%= tournament.organizer %>" required>
        </div>
        <div class="form-group">
            <label for="start_date">Start Date:</label>
            <input type="text" name="start_date" id="start_date" value="<%= tournament.start_date %>" required>
        </div>
        <div class="form-group">
            <label for="end_date">End Date:</label>
            <input type="text" name="end_date" id="end_date" value="<%= tournament.end_date %>" required>
        </div>
        <div class="form-group">
            <label for="max_players">Maximum Players:</label>
            <input type="number" name="max_players" id="max_players" value="<%= tournament.max_players %>" required>
        </div>
        <div class="form-group">
            <label for="location">Location:</label>
            <input type="text" name="location" id="location" value="<%= tournament.location %>" required>
        </div>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea name="description" id="description" rows="5" required><%= tournament.description %></textarea>
        </div>
        <div class="form-group">
            <label for="status">Status:</label>
            <select name="status" id="status" required>
                <option value="open" <%= tournament.status === 'open' ? 'selected' : '' %>>Open</option>
                <option value="closed" <%= tournament.status === 'closed' ? 'selected' : '' %>>Closed</option>
                <option value="completed" <%= tournament.status === 'completed' ? 'selected' : '' %>>Completed</option>
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
