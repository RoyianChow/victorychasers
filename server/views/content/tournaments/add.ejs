<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1>
                <%= title %>
            </h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Title</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Tournament title"
                    name="name" required>
                </div>
               
                <div class="form-group">
                    <label for="authorTextField">Game</label>
                    <input type="text" class="form-control"
                    id="gameTextField"
                    placeholder="Enter the Game"
                    name="game" required>
                </div>

                <div class="form-group">
                    <label for="organizerTextField">Organizer/Host</label>
                    <input type="text" class="form-control"
                    id="organizerTextField"
                    placeholder="Enter your name"
                    name="organizer" required>
                </div>

                <div class="form-group">
                    <label for="start_dateTextField">Start Date</label>
                    <input type="text" class="form-control"
                    id="start_dateTextField"
                    placeholder="Enter the Tournaments Start Date"
                    name="start_date" required>
                </div>
                <div class="form-group">
                    <label for="end_dateTextField">End Date</label>
                    <input type="text" class="form-control"
                    id="end_dateTextField"
                    placeholder="Enter the Tournaments End Date"
                    name="end_date" required>
                </div>
                <div class="form-group">
                    <label for="max_playersTextField">Max Players </label>
                    <input type="text" class="form-control"
                    id="max_playersTextField"
                    placeholder="Enter the Tournaments End Date"
                    name="max_players" required>
                </div>


                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the book"
                    name="description" required></textarea>
                </div>


                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tournaments/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>
    </div>
</main>