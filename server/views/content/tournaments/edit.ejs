
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-11">
            <h1><%= title %></h1>
           

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Book Title</label>
                    <input type="text" 
                    name="name" id="name" 
                    class="form-control" 
                    value="<%= tournament.name %>" required>

                </div>
               
                <div class="form-group">
                    <label for="authorTextField">Game</label>
                    <input type="text" class="form-control"
                    id="gameTextField"
                    placeholder="Enter the Game"
                    name="game" 
                    value="<%= tournament.game %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="organizerTextField">Organizer/Host</label>
                    <input type="text" class="form-control"
                    id="organizerTextField"
                    placeholder="Enter your name"
                    name="organizer"
                    value="<%= tournament.organizer %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="start_dateTextField">Start Date</label>
                    <input type="text" class="form-control"
                           id="start_dateTextField"
                           placeholder="Enter the Tournaments Start Date in this format (DD/MM/YY)"
                           name="start_date"
                           value="<%= tournament.start_date %>"
                           required
                           pattern="\d{2}\/\d{2}\/\d{2}">
                    <div class="invalid-feedback">Please enter a date in the format DD/MM/YY.</div>
                </div>
                <div class="form-group">
                    <label for="end_dateTextField">End Date</label>
                    <input type="text" class="form-control"
                    id="end_dateTextField"
                    placeholder="Enter the Tournaments End Date"
                    name="end_date"
                    value="<%= tournament.end_date %>"
                    required>
                </div>
                <div class="form-group">
                    <label for="max_playersTextField">Max Players</label>
                    <input type="text" class="form-control"
                           id="max_playersTextField"
                           placeholder="Enter max players"
                           name="max_players" 
                           value="<%= tournament.max_players %>"
                           required>
                    <div class="invalid-feedback">Please enter a valid number for Max Players.</div>
                  </div>
                  
                  <script>
                    // add event listener to the form submit button
                    const form = document.querySelector('form');
                    form.addEventListener('submit', function(event) {
                      const maxPlayersInput = document.getElementById('max_playersTextField');
                      if (isNaN(maxPlayersInput.value)) {
                        maxPlayersInput.classList.add('is-invalid');
                        event.preventDefault();
                      } else {
                        maxPlayersInput.classList.remove('is-invalid');
                      }
                    });
                  </script>


<div class="form-group">
    <label for="descriptionTextArea">Description</label>
    <textarea type="text" class="form-control"
              id="descriptionTextArea"
              placeholder="Enter a brief description of the tournament"
              name="description"
              required><%= tournament.description %></textarea>
</div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/tournaments/list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>
                <!-- Add the delete button below the cancel button -->
<a href="/tournaments/delete/<%= tournament._id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this tournament?');">
    <i class="fas fa-trash-alt"></i> Delete</a>        
            </form>
        </div>

    </div>
</div>







